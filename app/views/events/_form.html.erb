<%= form_for(@event,:html => { :class => "form-horizontal"} ) do |f| %>

<fieldset>
  <div class="control-group field">
    <%= f.label :client_name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :client_name %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :client_address, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :client_address %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :client_city, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :client_city %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :client_state, :class => "control-label" %>
    <div class="controls">
      <%= f.select :client_state, ([[['', '']]] << (us_states)).flatten(1) %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :client_zip, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :client_zip %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :client_home_phone, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :client_home_phone %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :client_work_phone, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :client_work_phone %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :client_mobile_phone, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :client_mobile_phone %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :client_email, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :client_email %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :title, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :title %>
    </div>
  </div>



  <div class="control-group field">
    <%= f.label :occurs_at, :class => "control-label" %>
    <div class="controls">
      <%= f.datepicker :occurs_at, :value => (@event.occurs_at || Date.today).strftime('%Y-%m-%d'), :dateFormat => 'yy-mm-dd' %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :start_time, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :start_time %>
    </div>
  </div>

  <div class="control-group field">
    <%= f.label :end_time, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :end_time %>
    </div>
  </div>

 <div class="control-group field">
    <%= f.label :arrival_time, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :arrival_time %>
    </div>
  </div>

  <div class="control-group field">
