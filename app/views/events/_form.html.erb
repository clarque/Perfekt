    <div class="controls">
      <%= f.check_box :valet %>
    </div>
  </div>


  <div class="actions">
    <%= f.submit nil, :class => "btn btn-primary" %> <%= link_to 'Back', events_path,:class => "btn" %>
  </div>
<% end %>
