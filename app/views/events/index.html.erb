<br />
<h1>Event List</h1>
<br /><br />

<table class="table table-striped">
  <tr>
    <th>Client</th>
    <th>Title</th>
    <th>Occurs at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.client_name %></td>
    <td><%= event.title %></td>
    <td><%= event.occurs_at.strftime("%e %b %Y") %></td>
    <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
    <td style="text-align: right;"><%= link_to 'Show', event,:class => "btn"  %>&nbsp;
    <%= link_to 'Edit', edit_event_path(event), :class => "btn"  %></td>
    <td><%= button_to 'Destroy', event, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Event', new_event_path, :class => "btn btn-primary", :method => :get %>
